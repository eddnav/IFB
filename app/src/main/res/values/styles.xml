<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/IFBEditText</item>
        <item name="android:textAppearance"></item>
        <item name="android:editTextStyle">@style/IFBEditText</item>
        <item name="android:spinnerStyle">@style/Base.Widget.AppCompat.Spinner</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IFBTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/inputText</item>
    </style>

    <style name="IFBTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="IFBEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:paddingBottom">@dimen/text_input_edit_text_bottom_padding</item>
    </style>

    <style name="IFBTableHeaderItem">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/table_header_text_size</item>
        <item name="android:textColor">@color/tableHeaderText</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/table_column_end_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="IFBDiagonalHeaderItem">
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/table_header_text_size</item>
        <item name="android:textColor">@color/tableHeaderText</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/table_column_end_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="IFBTableSideHeaderItem">
        <item name="android:maxWidth">@dimen/table_side_header_max_width</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/table_content_text_size</item>
        <item name="android:textColor">@color/tableContentText</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/table_column_end_padding</item>
    </style>

    <style name="IFBTableContentItem">
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/table_content_text_size</item>
        <item name="android:textColor">@color/tableContentText</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/table_column_end_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="IFBTableNumericContentItem">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/table_content_text_size</item>
        <item name="android:textColor">@color/tableContentText</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/table_column_end_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="IFBSpinnerItem">
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textColor">@color/inputText</item>
    </style>


</resources>
